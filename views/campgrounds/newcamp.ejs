<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title : </label>
                    <input class="form-control" type="text" name="campground[title]" id="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <input class="form-control" type="text" name="campground[location]" id="location">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Price : </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input name="campground[price]" type="number" class="form-control" placeholder="0.0"
                            aria-label="price" aria-describedby="price">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="iamge">Image Url : </label>
                    <input class="form-control" type="text" name="campground[image]" id="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description : </label>
                    <textarea class="form-control" type="text" name="campground[description]"
                        id="description"></textarea>
                </div>
                <button class="btn btn-success mb-3">Add Campground</button>
            </form>
            <a href="/campgrounds">Back to all CampGrounds</a>
        </div>
    </div>