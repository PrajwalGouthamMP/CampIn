<% layout('/layouts/boilerplate') %>
    <h1>List of Campgrounds</h1>
    <a href="/campgrounds/new">Add new CampGround</a>
    <ul>
        <% for(let camp of camps) { %>
            <!-- <li> <a href="campgrounds/<%= camp._id %>">
                    <%= camp.title %>
                </a>
            </li> -->
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= camp.image %>"></img>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %>
                            </h5>
                            <p class="card-text">
                                <%= camp.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small>
                            </p>
                            <a href="campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>